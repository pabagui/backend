doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Desaf√≠o 5 con Pug
    body
    div
        h1 TABLA DE PRODUCTOS REGISTRADOS
        table
            thead
                tr
                    th(scope="col") Nombre
                    th(scope="col") Precio
                    th(scope="col") Foto
                each prod in productos
                    tr
                        td.nombreProd= prod.title
                        td.prProd= prod.price
                        td 
                            img(alt="Foto", src=prod.thumbnail).fotoProd
        <a href="/" class="btn btn-lg btn-info" role="button"><i class="bi-house-fill"></i> Inicio</a> 